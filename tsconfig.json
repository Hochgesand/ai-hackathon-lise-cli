{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ESNext",
    "module": "es2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": true,
    "noImplicitAny": false,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "data/**/*"]
}
